<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando el botón está presionado -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/button_pressed_color" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Estado cuando el botón tiene el foco -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/button_focused_color" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Estado por defecto -->
    <item>
        <shape>
            <solid android:color="@color/button_default_color" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>