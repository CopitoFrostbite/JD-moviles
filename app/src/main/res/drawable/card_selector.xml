<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando la tarjeta está presionada -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/card_pressed_color" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Estado cuando la tarjeta está seleccionada -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/card_selected_color" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Estado por defecto -->
    <item>
        <shape>
            <solid android:color="@color/dialog_background" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>