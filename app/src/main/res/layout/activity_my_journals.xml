<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.MyJournals">


    <!-- Example Journal 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corners"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvJournalTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Journal Title 1"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tvJournalDate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 2024-06-08"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/tvJournalTime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 10:00 AM"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tvJournalMood1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mood: Happy"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEdit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/btnDelete1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Example Journal 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corners"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvJournalTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Journal Title 2"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tvJournalDate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 2024-06-07"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/tvJournalTime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 11:00 AM"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tvJournalMood2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mood: Sad"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEdit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/btnDelete2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Example Journal 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corners"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvJournalTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Journal Title 3"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tvJournalDate3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 2024-06-06"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/tvJournalTime3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 12:00 PM"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tvJournalMood3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mood: Angry"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEdit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/btnDelete3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>