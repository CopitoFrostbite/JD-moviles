<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/dialog_background">

    <!-- Name Filter Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        app:cardBackgroundColor="@color/card_default_color"
        app:cardElevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Buscar por Nombre"
            android:textColor="@color/primary_text_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNameFilter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_selector"
            android:hint="Buscar por nombre"
            android:textColor="@color/primary_text_color" />
    </androidx.cardview.widget.CardView>

    <!-- Date Filter Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/card_default_color"
        android:padding="8dp">

        <Button
            android:id="@+id/btnDateFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Fecha"
            android:backgroundTint="@color/button_background"
            android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>

    <!-- Draft Status Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/card_default_color"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnDraft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Draft"
                android:backgroundTint="@color/button_background"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnNotDraft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Draft"
                android:backgroundTint="@color/button_background"
                android:textColor="@color/white"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Mood Filter Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/card_default_color"
        android:padding="8dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:orientation="horizontal"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/btnHappyMood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="ðŸ˜¢"
                android:backgroundTint="@color/button_background"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnSadMood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="ðŸ˜¡"
                android:backgroundTint="@color/button_background"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnAngryMood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="ðŸ˜²"
                android:backgroundTint="@color/button_background"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnSurprisedMood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="ðŸ˜±"
                android:backgroundTint="@color/button_background"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnFearMood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="ðŸ˜Š"
                android:backgroundTint="@color/button_background"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnDiscontentMood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="ðŸ˜’"
                android:backgroundTint="@color/button_background"
                android:textColor="@color/white" />
        </GridLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnClearFilters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpiar Filtros"
        android:layout_gravity="end"
        android:padding="8dp"
        android:backgroundTint="@color/accent_color"
        android:textColor="@color/white" />

    <!-- OK Button -->
    <Button
        android:id="@+id/btnFilterOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_gravity="center"
        android:padding="8dp"
        android:backgroundTint="@color/accent_color"
        android:textColor="@color/white" />
</LinearLayout>