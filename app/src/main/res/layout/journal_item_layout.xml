<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:background="@drawable/background_selector"
    android:padding="16dp"
    android:layout_marginBottom="16dp"
    android:id="@+id/containerLayout">


    <TextView
        android:id="@+id/tvDraftLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/draft_label_background"
        android:text="Draft"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="4dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvJournalTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Journal Title 1"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/tvJournalDate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: 2024-06-08"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/tvJournalTime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: 10:00 AM"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/tvJournalMood1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mood: Happy"
        android:paddingBottom="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEdit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/btnDelete1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"/>
        <!-- BotÃ³n de Publicar, visible solo si es borrador -->
        <Button
            android:id="@+id/btnPublish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publish"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>